<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/gradient"
    tools:context="com.haldane.katherine.conventioneerapp.NewUserActivity" >

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:weightSum="1">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="220dp"
            android:background="#FEFEEB"
            android:padding="10dp">

            <ImageView
                android:layout_marginTop="50dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/conlogo" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView2"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/convention" />
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="20dp"
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="147dp"
            android:layout_alignParentStart="true"
            android:layout_weight="0.16">

            <Button
                android:layout_width="367dp"
                android:layout_height="wrap_content"
                android:text="@string/multilines"
                android:id="@+id/signupButton"
                android:layout_gravity="center_horizontal"
                android:onClick="onButtonClick"
                android:background="@drawable/buttonshape"
                android:textColor="#FEFEEB"
                android:layout_marginBottom="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="or"
                android:id="@+id/textView2"
                android:layout_gravity="center_horizontal" />

            <Button
                android:layout_marginTop="10dp"
                android:layout_width="419dp"
                android:layout_height="wrap_content"
                android:text="@string/anonButtonText"
                android:id="@+id/anonButton"
                android:layout_gravity="center_horizontal"
                android:onClick="onButtonClick"
                android:textColor="#FEFEEB"
                android:background="@drawable/buttonshape"/>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_gravity="center_horizontal"
            android:background="#FEFEEB"
            android:layout_weight="0.09">

            </LinearLayout>

    </LinearLayout>

</RelativeLayout>


